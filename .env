# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# Ad Configuration
AD_INTERSTITIAL_DELAY=3
ENABLE_ADS=true

# File Upload Limits
MAX_BULK_URLS=100
MAX_FILE_SIZE=5242880

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true